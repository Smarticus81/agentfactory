{
  "name": "FamilyAI - Your Family's Personal Assistant",
  "short_name": "FamilyAI",
  "description": "Create your own AI assistant in minutes. Handle emails, manage calendars, track family schedules, and get instant answers to everyday questions.",
  "start_url": "/dashboard",
  "display": "standalone",
  "background_color": "#0a0a0a",
  "theme_color": "#667eea",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["productivity", "family", "utilities", "ai", "assistant"],
  "icons": [
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "monochrome"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Access your AI assistant dashboard",
      "url": "/dashboard",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Agent Designer",
      "short_name": "Designer",
      "description": "Create and customize AI assistants",
      "url": "/dashboard/agent-designer",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Documents",
      "short_name": "Docs",
      "description": "Manage documents and knowledge base",
      "url": "/dashboard/documents",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    },
    {
      "name": "Voice Test",
      "short_name": "Voice",
      "description": "Test voice interactions",
      "url": "/dashboard/agent-designer?tab=voice",
      "icons": [{ "src": "/icon-192.png", "sizes": "192x192" }]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshot-wide.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "FamilyAI Dashboard - AI assistant interface with real-time processing"
    },
    {
      "src": "/screenshot-narrow.png",
      "sizes": "750x1334",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "FamilyAI Mobile - Touch-optimized AI controls and document management"
    }
  ],
  "features": [
    "Cross Platform",
    "fast",
    "simple",
    "offline",
    "voice-enabled",
    "ai-powered",
    "real-time"
  ],
  "edge_side_panel": {
    "preferred_width": 420
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+familyai",
      "url": "/a/%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/dashboard/documents",
      "accept": {
        "application/pdf": [".pdf"],
        "text/plain": [".txt"],
        "application/vnd.openxmlformats-officedocument.wordprocessingml.document": [".docx"],
        "text/markdown": [".md"]
      }
    }
  ],
  "share_target": {
    "action": "/dashboard/documents",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "file",
          "accept": ["application/pdf", "text/plain", "application/vnd.openxmlformats-officedocument.wordprocessingml.document"]
        }
      ]
    }
  }
}
