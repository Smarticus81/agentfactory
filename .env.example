# Convex Configuration
NEXT_PUBLIC_CONVEX_URL=https://your-convex-url.convex.cloud
CONVEX_DEPLOY_KEY=prod:your-deploy-key

# OpenAI
NEXT_PUBLIC_OPENAI_API_KEY=sk-your-openai-api-key

# Clerk Auth
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-clerk-publishable-key
CLERK_SECRET_KEY=sk_test_your-clerk-secret-key

# Google OAuth
# For local development, use http://localhost:3000/api/gmail/callback
GMAIL_REDIRECT_URI=http://localhost:3000/api/gmail/callback
# For production, you must set these in your Vercel project settings
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# App Origin
# Use http://localhost:3000 for local development
NEXT_PUBLIC_APP_ORIGIN=http://localhost:3000

# Voice Provider API Keys
NEXT_PUBLIC_ELEVENLABS_API_KEY=your-elevenlabs-api-key
NEXT_PUBLIC_DEEPGRAM_API_KEY=your-deepgram-api-key
NEXT_PUBLIC_CARTESIA_API_KEY=your-cartesia-api-key
NEXT_PUBLIC_GOOGLE_API_KEY=your-google-api-key
NEXT_PUBLIC_PLAYHT_API_KEY=your-playht-api-key
NEXT_PUBLIC_PLAYHT_USER_ID=your-playht-user-id

# Convex Team Access
CONVEX_TEAM_ACCESS_TOKEN=your-convex-team-token

# Rate Limiting (requests per minute per user)
GMAIL_RATE_LIMIT_PER_USER=30
CALENDAR_RATE_LIMIT_PER_USER=50

# Token Management
TOKEN_REFRESH_BUFFER_MINUTES=5
BATCH_REFRESH_INTERVAL_HOURS=6

# Deployment used by `npx convex dev`
CONVEX_DEPLOYMENT=prod:your-project-slug

# Vercel Deployment
VERCEL_TOKEN=
VERCEL_TEAM_ID=
VERCEL_PROJECT_ID=
NEXT_PUBLIC_APP_URL=
